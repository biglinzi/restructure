{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": "./",
    "types": [
      "node"
    ],
    // 类型入口
    "typeRoots": ["./node_modules/@types/", "./types"],
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "#/*": ["types/*"],
      "@img/*": [
        "src/assets/img/*"
      ],
      "@less/*": [
        "src/assets/less/*"
      ],
      "@css/*": [
        "src/assets/css/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@cp/*": [
        "src/components/*"
      ],
      "@views/*": [
        "src/views/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ]
    },
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": [
    "types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
